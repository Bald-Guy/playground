/* pages/playground/playground.wxss */
.group-title-item1 {
  width: 400rpx;
  height: 80rpx;
  border: 1px red solid;
  flex-shrink: 0;
  position: relative;
  animation-name: swipe;
  animation-duration: 3s;
  animation-fill-mode: forwards;
}
@keyframes swipe {
  0% {
    right: 0px;
  }
  100% {
    right: 300px;
  }
}
.emoji-group-container {
  position: absolute;
  width: 100%;
  max-height: 150px;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0px -4px 10px rgba(172, 172, 172, 0.25);
  background-color: #fff;
}
.fold-btn-container {
  width: 80rpx;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
}
.fold-btn-icon {
  width: 40rpx;
  height: 40rpx;
}
.list-container {
  width: 100%;
  /* background-color: #dfdfdf; */
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  align-content: flex-start;
}
.emoji-txt {
  display: flex;
  justify-content: center;
  width: 104rpx;
  height: 104rpx;
  font-size: 60rpx;
  line-height: 104rpx;
  text-align: center;
}
.title-container {
  width: 710rpx;
  height: 40px;
  margin: auto;
  display: flex;
  white-space: nowrap;
}
.group-title-item-active {
  display: inline-block;
  width: 108rpx;
  height: 60rpx;
  margin-right: 40rpx;
  background: #E9F6EA;
  border: 4rpx solid #307739;
  border-radius: 30rpx;
  font-weight: 600;
  font-size: 14px;
  line-height: 20px;
  color: #307739;
}
.group-title-item {
  display: inline-block;
  width: 108rpx;
  height: 60rpx;
  margin-right: 40rpx;
  background: #FFFFFF;
  border: 2rpx solid #85A988;
  border-radius: 30rpx;
  font-weight: 400;
  font-size: 14px;
  color: #71BE61;
}
.group-title-item1 {
  width: 400rpx;
  height: 80rpx;
  border: 1px red solid;
  flex-shrink: 0;
  position: relative;
}
.group-title-txt {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 侧边栏 */
.user-info {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.user-info-content {
  display: flex;
  align-items: center;
  width: 100%;
}
.userinfo-avatar {
  flex-shrink: 0;
  margin-left: 40rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background-color: azure;
}
.login-btn {
  margin-left: 32rpx !important;
  padding-left: 0 !important;
  background: none !important;
  border-style: none !important;
  color: #2b2b2b !important;
}
.login-btn::after{
  border: none;
}
.userinfo-nickname {
  margin-left: 32rpx;
  margin-right: 32rpx;
  font-weight: 600;
  font-size: 18px;
  line-height: 28px;
  letter-spacing: 0.4px;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap; 
  color: #2B2B2B;
}
.group-title {
  margin-top: 96rpx;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  font-weight: 400;
  font-size: 15px;
  line-height: 28px;
  letter-spacing: 0.4px;
  color: #9B9B9B;
}
.no-group {
  width: 200rpx;
  height: 300rpx;
  background-color: aquamarine;
}
.group-item {
  margin-right: 60rpx;
  margin-left: 60rpx;
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.group-icon {
  width: 36rpx;
  height: 36rpx;
}
.group-txt {
  flex: 1;
  margin-left: 34rpx;
  font-weight: 400;
  font-size: 15px;
  line-height: 28px;
  letter-spacing: 0.4px;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap; 
  color: #404040;
}
.more-btn {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.more-icon {
  width: 24rpx;
  height: 6rpx;
}
.add-group-btn {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 116rpx;
  height: 116rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-group-icon {
  width: 36rpx;
  height: 36rpx;
}