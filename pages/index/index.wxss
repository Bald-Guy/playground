/**index.wxss**/
page {
  background-color: #f9f9f9;
}
/* 顶部导航栏 */
.nav-bar { 
  position: fixed;
  top: 0;
  width: 100%; 
  z-index: 100;
  background: #f9f9f9;
}
.nav-content {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  background-color: #f9f9f9;
}
/* 好像是有一种办法，通过选择器？就不用每次都命名这么长的类名 */
.nav-content-left-btn {
  position: absolute;
  left: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 32px;
  height: 32px;
}
.nav-content-left-btn-icon {
  margin-top: 5px;
  width: 18px;
  height: 16px;
}
.nav-content-mid-title {
  font-size: 16px;
  font-weight: bolder;
  color: #181818;
}
.nav-content-logo {
  width: 110px;
  height: 32px;
}
/* 滑动列表 */
.note-list-container {
  /* background-color: aqua; */
}
.note-card {
  width: 710rpx;
  margin: 0 auto 20rpx;
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  box-shadow: 0px 4px 20px rgba(217, 217, 217, 0.25);
  border-radius: 10px;
}
.title-txt {
  margin: 32rpx 32rpx 12rpx 32rpx;
  font-weight: 600;
  font-size: 18px;
  line-height: 28px;
  letter-spacing: 0.4px;
  color: #333333;
}
.body-txt {
  margin: 0 32rpx 4rpx 32rpx;
  font-weight: 400;
  font-size: 16px;
  line-height: 25px;
  letter-spacing: 0.3px;
  color: #363636;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 6;
}
.bottom {
  margin: 0 0 24rpx 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.date-txt {
  font-family: 'DIN Alternate';
  font-style: normal;
  font-weight: 700;
  font-size: 14px;
  line-height: 16px;
  color: #ADADAD;
}
.delete-btn {
  display: flex;
  width: 32px;
  height: 32px;
  padding-right: 32rpx;
  justify-content: flex-end;
  align-items: center;
}
.delete-icon {
  width: 32rpx;
  height: 32rpx;
}
/* 底部悬浮按钮 */
.btn-container {
  position: fixed;
  width: 100%;
  display: flex;
  justify-content: center;
}
.add-note-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 104rpx;
  height: 104rpx;
  background: #FD3B44;
  box-shadow: 0px 4px 20px rgba(253, 59, 68, 0.25);
  border-radius: 10px;
}
.add-note-icon {
  width: 40rpx;
  height: 40rpx;
}
/* 侧边栏 */
.user-info {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.user-info-content {
  display: flex;
  align-items: center;
  width: 100%;
}
.userinfo-avatar {
  flex-shrink: 0;
  margin-left: 40rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background-color: azure;
}
.login-btn {
  margin-left: 32rpx !important;
  padding-left: 0 !important;
  background: none !important;
  border-style: none !important;
  color: #2b2b2b !important;
}
.login-btn::after{
  border: none;
}
.userinfo-nickname {
  margin-left: 32rpx;
  margin-right: 32rpx;
  font-weight: 600;
  font-size: 18px;
  line-height: 28px;
  letter-spacing: 0.4px;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap; 
  color: #2B2B2B;
}
.group-title {
  margin-top: 96rpx;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  font-weight: 400;
  font-size: 15px;
  line-height: 28px;
  letter-spacing: 0.4px;
  color: #9B9B9B;
}
.no-group {
  width: 200rpx;
  height: 300rpx;
  background-color: aquamarine;
}
.group-item {
  margin-right: 60rpx;
  margin-left: 60rpx;
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.group-icon {
  width: 36rpx;
  height: 36rpx;
}
.group-txt {
  flex: 1;
  margin-left: 34rpx;
  font-weight: 400;
  font-size: 15px;
  line-height: 28px;
  letter-spacing: 0.4px;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap; 
  color: #404040;
}
.more-btn {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.more-icon {
  width: 24rpx;
  height: 6rpx;
}
.add-group-btn {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 116rpx;
  height: 116rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-group-icon {
  width: 36rpx;
  height: 36rpx;
}