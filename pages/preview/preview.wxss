/* pages/preview/preview.wxss */
.contain {
  width:100vw;
  height:100vh;
  overflow-y:scroll
}
.contain::-webkit-scrollbar {
  width:0;
  height:0;  
  color:transparent;  
  display:none
}
.swiper {
  /* width: 750rpx;
  height: 750rpx; */
}
/* 默认指示点的样式 */
.swiper .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  margin: 0 4rpx !important;
  background: #cbcdcf;
  border-radius: 12rpx;
}
/* 选中指示点的样式 */
.swiper .wx-swiper-dot.wx-swiper-dot-active {
    width: 12rpx;
    height: 12rpx;
    background: #ec3e47;
    border-radius: 12rpx;
}
.swiper-image {
  /* width: 750rpx;
  height: 750rpx; */
  background-color: #dfdfdf;
}
.title {
  width: 686rpx;
  margin: auto;
  font-weight: 600;
  font-size: 18px;
  line-height: 28px;
  letter-spacing: 0.4px;
  color: #333333;
}
.body {
  width: 686rpx;
  margin: 6px auto 0;
  font-weight: 400;
  font-size: 16px;
  line-height: 25px;
  letter-spacing: 0.3px;
  color: #363636;
}
.date-container {
  width: 686rpx;
  margin: 30rpx auto 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.date-txt {
  font-weight: 400;
  font-size: 12px;
  line-height: 17px;
  color: #B3B3B3;
}
.dislike-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 128rpx;
  height: 48rpx;
  border: 1px solid #CFCFCF;
  box-sizing: border-box;
  border-radius: 12px;
}
.dislike-icon {
  width: 22rpx;
  height: 22rpx;
  margin-left: 12rpx;
  margin-right: 8rpx;
}
.dislike-txt {
  font-weight: 400;
  font-size: 12px;
  line-height: 17px;
  color: #868686;
}
.line {
  margin: 24rpx auto 36rpx;
  width: 686rpx;
  height: 1rpx;
  background-color: #dfdfdf;
}
.comment-bar {
  width: 686rpx;
  margin: auto;
  display: flex;
  flex-direction: row;
}
.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background-color: #CFCFCF;
}
.input-box1 {
  flex: 1;
  height: 72rpx;
  margin-left: 24rpx;
  padding-left: 36rpx;
  border-radius: 36rpx;
  background-color: #f6f6f6;
  font-size: 14px;
  font-weight: 400;
  line-height: 72rpx;
  color: #828282;
}
.no-comment-container {
  width: 100%;
  display: flex;
  justify-content: center;
}
.no-comment-icon {
  width: 78rpx;
  height: 57rpx;
  margin: 96rpx auto 0;
}
.no-comment-txt {
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
  font-weight: 400;
  font-size: 14px;
  line-height: 20px;
}
.txt1 {
  color: #828282;
}
.txt2 {
  color: #1F3360;
}
.block-view {
  width: 100%;
  height: 240rpx;
}
.social-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx solid #e8e8e8;
  background-color: #fff;
}
.input-box2 {
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 32rpx;
  margin-right: 36rpx;
  height: 72rpx;
  border-radius: 36rpx; 
  background-color: #f6f6f6;
}
.pen-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 24rpx;
  margin-right: 20rpx;
}
.input-box2-txt {
  width: 136rpx;
  font-weight: 400;
  font-size: 14px;
  line-height: 20px;
  color: #828282;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap;
}
.btn {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.btn-icon {
  width: 60rpx;
  height: 60rpx;
}
.btn-txt {
  margin-left: 4rpx;
  margin-right: 32rpx;
  font-weight: 600;
  font-size: 14px;
}