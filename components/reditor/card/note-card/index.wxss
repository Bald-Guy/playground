/* components/reditor/note-card/index.wxss */
.note-card {
  width: 710rpx;
  margin: 20rpx auto 0;
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  box-shadow: 0px 4px 20px rgba(217, 217, 217, 0.25);
  border-radius: 10px;
}
.title-txt {
  margin: 32rpx 32rpx 12rpx 32rpx;
  font-weight: 600;
  font-size: 18px;
  line-height: 28px;
  letter-spacing: 0.4px;
  color: #333333;
}
.body-txt {
  margin: 0 32rpx 4rpx 32rpx;
  font-weight: 400;
  font-size: 16px;
  line-height: 25px;
  letter-spacing: 0.3px;
  color: #363636;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 6;
}
.bottom {
  margin: 0 0 24rpx 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.date-txt {
  font-family: 'DIN Alternate';
  font-style: normal;
  font-weight: 700;
  font-size: 14px;
  line-height: 16px;
  color: #ADADAD;
}
.delete-btn {
  display: flex;
  width: 32px;
  height: 32px;
  padding-right: 32rpx;
  justify-content: flex-end;
  align-items: center;
}
.delete-icon {
  width: 32rpx;
  height: 32rpx;
}